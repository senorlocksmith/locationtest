<p id="notice"><%= notice %></p>

<h1>Settings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Placement</th>
      <th>Description</th>
      <th>S filming date</th>
      <th>E filming date</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.name %></td>
        <td><%= setting.placement %></td>
        <td><%= setting.description %></td>
        <td><%= setting.s_filming_date %></td>
        <td><%= setting.e_filming_date %></td>
        <td><%= setting.project.name %></td>
        <td><%= link_to 'Show', project_setting_path(@project, setting) %></td>
        <td><%= link_to 'Edit', edit_project_setting_path(@project, setting) %></td>
        <td><%= link_to 'Destroy', project_setting_path(@project, setting), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

